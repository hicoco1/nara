<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    <!-- 
		이쿼리를 이용하기 위해선 namespace명.id로 접근하면 된다.
		파라미터를 map으로 넘겼기 때문에 타입을 정의해줘야한다.
		resultType는 Integer로 줬다. int는 안된다 클래스 타입으로 줘야한다.
     -->
<mapper namespace="BannedTerms">


	<select resultType="com.mrs.nara.vo.BannedTermsVo" parameterType="com.mrs.nara.vo.BannedTermsVo" id="getBannedTermsList">
		SELECT BT_SEQ ,BT_TEXT ,INSERT_DATE  from NR_Banned_Terms WHERE 1 = 1 
		<if test="BT_SEQ != null and BT_SEQ != ''">AND BT_SEQ = ${BT_SEQ}</if>
		<if test="BT_TEXT != null and BT_TEXT != ''">AND BT_TEXT LIKE '%' || ${BT_TEXT} || '%' </if>
		<if test="INSERT_DATE != null and INSERT_DATE != ''">AND INSERT_DATE  = ${INSERT_DATE} </if>
		ORDER BY BT_SEQ 
		<include refid="Paging.altibase"/>
	</select>
	
	<insert id="setBannedTermsI"  parameterType="com.mrs.nara.vo.BannedTermsVo" >
			insert into NR_Banned_Terms(
			BT_SEQ    ,
			BT_TEXT      ,
			INSERT_DATE    
			)
			values(
			#{BT_SEQ} ,
			#{BT_TEXT} ,
			sysdate
			)
	</insert>
	
	<update id="setBannedTermsU" parameterType="com.mrs.nara.vo.BannedTermsVo">
		update NR_Banned_Terms set 
			BT_TEXT = #{BT_TEXT}
	</update>

	<delete id="setBannedTermsD" parameterType="com.mrs.nara.vo.BannedTermsVo">
		delete from NR_Banned_Terms where BT_SEQ = #{BT_SEQ}
	</delete>
	
	<select resultType="com.mrs.nara.vo.BannedTermsVo" parameterType="com.mrs.nara.vo.BannedTermsVo" id="getBannedTermsListOne">
		SELECT * from NR_Banned_Terms WHERE 1 = 1 
			   AND BT_SEQ = #{BT_SEQ}
		ORDER BY BT_SEQ 
	</select>




</mapper>